{
  "name": "modwatchuploader",
  "version": "0.3.2",
  "main": "index.js",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-animate": "^1.5.8",
    "angular-aria": "^1.5.8",
    "angular-material": "^1.0.9",
    "denodeify": "^1.2.1",
    "electron-debug": "^1.0.1"
  },
  "scripts": {
    "start": "electron ./index.js",
    "build:js": "browserify ./src/js/uploader.module.js -u electron -t babelify -t partialify -o ./dist/index.js",
    "watch:js": "watchify ./src/js/uploader.module.js -u electron -t babelify -t partialify -o ./dist/index.js",
    "build:css": "postcss --local-plugins -u postcss-cssnext -u postcss-import -o ./dist/index.css ./src/css/global.css",
    "watch:css": "postcss --local-plugins -w -u postcss-cssnext -u postcss-import -o ./dist/index.css ./src/css/global.css",
    "build:node": "browserify --node -u electron ./src/node/index.js -t babelify -o ./index.js",
    "build": "npm run build:js && npm run build:node",
    "prepackage": "npm run build",
    "package": "node ./scripts/package.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^11.2.0",
    "devtron": "^1.2.1",
    "electron-packager": "^7.3.0",
    "electron-prebuilt": "1.3.1",
    "partialify": "^3.1.6",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "watchify": "^3.7.0"
  }
}
