{
  "name": "modwatchuploader",
  "description": "A desktop app to upload load orders and config files to Modwatch",
  "author": "Aaron Ballard <ans.ballard@gmail.com",
  "homepage": "https://nexusmods.com/skyrim/mods/56640",
  "version": "0.4.0",
  "main": "index.js",
  "dependencies": {
    "electron-debug": "^1.0.1",
    "clipboard": "^2.0.4",
    "preact": "^8.4.2"
  },
  "scripts": {
    "start": "electron ./index.js",
    "prepackage": "npm run build",
    "package": "node ./scripts/package.js",
    "build": "rollup -c --environment NODE_ENV:production",
    "watch": "rollup -cw --environment NODE_ENV:development",
    "build:node": "tsc -p ./src/node",
    "prettier": "prettier --write \"{*.js,src/**/*.{ts,tsx,css}}\""
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "devtron": "^1.4.0",
    "electron": "^4.0.1",
    "electron-packager": "^13.0.1",
    "postcss": "^7.0.7",
    "postcss-preset-env": "^6.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "rollup": "^0.68.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss-modules": "^1.0.10",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "typescript": "^3.2.2"
  }
}
